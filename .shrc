#!/bin/sh

#
# .shellrc
#

export EDITOR="vim"
export VISUAL="vim"
export TERMINAL="xterm"
export BROWSER="chromium"
export LC_ALL=en_US.UTF-8
export FONTCONFIG_FILE=~/.fonts.conf
export DOTNET_CLI_TELEMETRY_OPTOUT=1
export HISTFILESIZE=10000
export HISTFILE=~/.sh_history
export TODO_PATH=~/github/todo
export SHW_LIB=~/pictures/chibi
export GGG_LIB=~/pictures/chibi
export BKM_DIR=~/.bookmarks
export WPP_LIB=~/pictures/life
export PAP_DIR=~/github/pap/palettes
export CPR_LIB=~/github/cpr

DRT_PATH=~/dotfiles:~/github/bkm:~/github/pap:~/github/nfy
DRT_PATH=~/github/bin:~/github/cpr:~/github/rpg:$DRT_PATH
DRT_PATH=~/.vim/plugged/sc.vim:~/.vim/plugged/sl.vim:$DRT_PATH
export DRT_PATH

BUP_PATH=~/github:~/documents:~/projects:~/dotfiles:~/pictures:~/Downloads
BUP_PATH=~/media:~/fiddles:~/bin:~/packages:~/qmk_firmware:$BUP_PATH
export BUP_PATH

LESS_TERMCAP_mb=$(printf '\e[1;32m')
LESS_TERMCAP_md=$(printf '\e[1;34m')
LESS_TERMCAP_me=$(printf '\e[0m')
LESS_TERMCAP_se=$(printf '\e[0m')
LESS_TERMCAP_so=$(printf '\e[41;30m')
LESS_TERMCAP_ue=$(printf '\e[0m')
LESS_TERMCAP_us=$(printf '\e[1;35m')
export LESS_TERMCAP_mb
export LESS_TERMCAP_md
export LESS_TERMCAP_me
export LESS_TERMCAP_se
export LESS_TERMCAP_so
export LESS_TERMCAP_ue
export LESS_TERMCAP_us

# shellcheck disable=1090
[ -f ~/.aliases ] && . ~/.aliases

alias la="ls -AF1 --color=always"
alias al="la | less -R"
alias ll="ls -lAFGh --color=always | less -R"
alias las="stat -c '%A %a %n' *"
alias gc="git commit"
alias gcm="git commit -m"
alias gp="git push"
alias gs="git status"
alias gss="git status -s"
alias glog="git log --graph"
alias glogc="git shortlog -s -n -e --all"
alias gh="cd ~/github/"
alias dot="cd ~/dotfiles/"
alias doc="cd ~/documents/"
alias pro="cd ~/projects/"
alias pks="cd ~/packages/"

export PS1="-> "
