[global/wm]
	margin-top = 0
	margin-bottom = 0

[settings]
	throttle-output = 5
	throttle-output-for = 10
	throttle-input-for = 30

[colors]
	foreground = ${xrdb:foreground}
	background = ${xrdb:background}
	focused = #3B4252
	border = #4C566A

	black = ${xrdb:color0}
	red = ${xrdb:color1}
	green = ${xrdb:color2}
	yellow = ${xrdb:color3}
	blue = ${xrdb:color4}
	magenta = ${xrdb:color5}
	cyan = ${xrdb:color6}

[bar/base]
	monitor = ${env:MONITOR:eDP1}
	monitor-fallback = ${env:MONITOR:DP1}

	fixed-center = true
	override-redirect = true
	wm-restack = i3

	dpi-x = 0
	dpi-y = 0

	offset-y = 20
	offset-x = 20

	height = 44

	background = ${colors.background}
	foreground = ${colors.foreground}

	border-size = 3
	border-color = ${colors.border}

	line-size = 0
	line-color = ${colors.background}

	padding-left = 2
	padding-right = 2

	module-margin-left = 1
	module-margin-right = 1

	font-0 = "Roboto Mono:size=12:weight=bold;3"
	font-1 = "Font Awesome 5 Free:size=10:weight=bold;2"
	font-2 = "Font Awesome 5 Brands:size=10;2"

[bar/top]
	inherit = bar/base
	bottom = false

	offset-x = 1%
	width = 35%

	modules-left = i3
	modules-right = wifi battery

[bar/bottom]
	inherit = bar/base
	bottom = true

	width = 25%

	modules-left = pulseaudio backlight pacupdate
	modules-right = date

[module/i3]
	type = internal/i3
	format = <label-state>
	index-sort = true
	wrapping-scroll = false
	enable-click = true
	pin-workspaces = true
	strip-wsnumbers = true

	ws-icon-default = 

	label-focused = %icon%
	label-focused-foreground = ${colors.foreground}
	label-focused-background = ${colors.background}
	label-focused-padding = 1

	label-unfocused = %icon%
	label-unfocused-foreground = ${colors.black}
	label-unfocused-padding = 1

	label-urgent = %icon%
	label-urgent-foreground = ${colors.red}
	label-urgent-padding = 1

[module/cpu]
	type = internal/cpu
	interval = 1

	format = <label>
	format-prefix = 
	format-prefix-padding-left = 1
	format-prefix-foreground = ${colors.magenta}
	format-prefix-background = ${colors.background}

	label = %percentage%%
	label-foreground = ${colors.magenta}
	label-background = ${colors.background}
	label-padding = 1

[module/ram]
	type = internal/memory
