set $mod Mod4

# Font
font pango:SF Mono Medium 11

# Gaps
gaps inner 11
gaps outer 0

# Borders
for_window [class=".*"] border pixel 0
for_window [instance="popup"] border pixel 11

# Colors
set_from_resource $darkBlack     color0
set_from_resource $black         color8
set_from_resource $darkRed       color1
set_from_resource $red           color9
set_from_resource $darkGreen     color2
set_from_resource $green         color10
set_from_resource $darkYellow    color3
set_from_resource $yellow        color11
set_from_resource $darkBlue      color4
set_from_resource $blue          color12
set_from_resource $darkMagenta   color5
set_from_resource $magenta       color13
set_from_resource $darkCyan      color6
set_from_resource $cyan          color14
set_from_resource $darkWhite     color7
set_from_resource $white         color15

set $borderFocused #0a1519
set $borderUnfocused #0a1519

#                        Border            Background        Foreground        Indicator         Child Border
client.focused           $borderFocused    $borderFocused    $borderFocused    $borderFocused    $borderFocused
client.unfocused         $borderUnfocused  $borderUnfocused  $borderUnfocused  $borderUnfocused  $borderUnfocused
client.focused_inactive  $borderUnfocused  $borderUnfocused  $borderUnfocused  $borderUnfocused  $borderUnfocused

# Focus
focus_follows_mouse no

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Launch popup terminal on i3 startup
for_window [instance="popup"] floating enable
for_window [instance="popup"] resize set 2800 1400
for_window [instance="popup"] move scratchpad
exec --no-startup-id kitty --name popup

# Launch new terminal window
bindsym $mod+Return exec --no-startup-id kitty

# Show popup terminal
bindsym $mod+p [instance="popup"] scratchpad show; [instance="popup"] move position center

# Launch popup terminal manually, used in case accidentally closed or whatever
bindsym $mod+Shift+Control+p exec --no-startup-id kitty --name popup

# Start regular browser
bindsym $mod+Shift+b exec --no-startup-id chromium

# Start minimal browser
bindsym $mod+Control+b exec --no-startup-id surf

# Launch dmenu
bindsym $mod+d exec dmenu_run

# Launch i3-dmenu-desktop
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop

# Kill focused window
bindsym $mod+Shift+q kill

# Lock screen
bindsym $mod+Shift+x exec --no-startup-id i3lock -i $HOME/.wallpapers/arch-neo.png

# Take screenshot
bindsym $mod+Shift+Control+s exec scrot ~/Github/fehawen-files/screenshots/%Y-%m-%d-%T-screenshot.png


# Conky bar
bar {
	font pango:SF Mono Bold 11
	height 35
	position top
	workspace_buttons yes
	colors {
		background #0f191d
		statusline #B5ECCC
		separator #2F444A

		focused_workspace  #0f191d #0f191d #58856d
		active_workspace   #0f191d #0f191d #58856d
		inactive_workspace #0f191d #0f191d #2f444a
		urgent_workspace   #0f191d #0f191d #58856d
	}
	status_command $HOME/.config/i3/i3conkybar
}

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

